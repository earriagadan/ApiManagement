			<div class="modal-footer d-flex justify-content-between">
				<div class="btnUtilidades">
				</div>

				<div class="btnCerrar">
					<button type="button" id="btn-Cancelar" class="btn btn-hdi-outline-tertiary" data-dismiss="modal">Cerrar</button>
				</div>
